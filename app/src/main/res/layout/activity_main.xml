<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/wwwww"
            android:gravity="right|bottom"
            android:text=""
            android:maxLines="2"
            android:textAllCaps="false"
            android:textColor="@android:color/background_dark"
            android:textSize="@android:dimen/notification_large_icon_width"
            android:textStyle="italic" />
        <!--android:ellipsize="end"-->

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@color/wwwww"
            android:gravity="right|top"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@android:color/background_dark"
            android:textSize="36sp"
            android:textStyle="italic" />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gray_selector"
                android:text="c" />

            <Button
                android:id="@+id/buttondel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gray_selector"
                android:text="DEL" />

            <Button
                android:id="@+id/buttonbai"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gray_selector"
                android:text="%" />

            <Button
                android:id="@+id/buttond"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gray_selector"
                android:text="/" />

        </TableRow>

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_selector"
                android:text="7"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <Button
                android:textSize="24sp"
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_selector"
                android:text="8"
                tools:ignore="HardcodedText" />

            <Button
                android:textSize="24sp"
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_selector"
                android:text="9"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/buttonc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gray_selector"
                android:text="*"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <Button
                android:textSize="24sp"
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_selector"
                android:text="4" />

            <Button
                android:textSize="24sp"
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_selector"
                android:text="5" />

            <Button
                android:textSize="24sp"
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/white_selector"
                android:text="6" />


            <Button
                android:id="@+id/buttonb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gray_selector"
                android:text="-"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:textSize="24sp"
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_selector"
                android:text="1" />

            <Button
                android:textSize="24sp"
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_selector"
                android:text="2" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_selector"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttona"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gray_selector"
                android:text="+"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:textSize="24sp"
                android:id="@+id/button0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:background="@drawable/white_selector"
                android:text="0" />

            <Button
                android:textSize="24sp"
                android:id="@+id/buttondian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_selector"
                android:text="." />

            <Button
                android:id="@+id/buttonA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/orangeselector"
                android:textSize="24sp"
                android:baselineAligned="false"
                android:text="=" />

        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>